<idea-plugin>
    <id>top.verytouch.vkit.mydoc.plugin.idea</id>
    <name>MyDoc</name>
    <version>2.2.2</version>
    <vendor email="verytouch@qq.com" url="url">verytouch</vendor>

    <description><![CDATA[
      <strong>click the right mouse button and build api docs, support: </strong>
      <ol>
        <li>build html</li>
        <li>build markdown</li>
        <li>build word</li>
        <li>build postman collection</li>
        <li>copy idea http client</li>
        <li>copy curl</li>
        <li>copy openapi</li>
        <li>copy json doc</li>
        <li>copy json schema</li>
        <li>upload to apifox</li>
        <li>search url (ctrl + \)</li>
      </ol>
      <strong>doc source: </strong>
      <ol>
        <li>source code</li>
        <li>swagger annotation</li>
        <li>document comments</li>
      </ol>
    ]]></description>

    <change-notes><![CDATA[
    <div>
        <strong>v2.2.2</strong>
        <ul>
          <li>copy json schema</li>
          <li>search everywhere module filter</li>
          <li>builder refactor</li>
          <li>fix bugs</li>
        </ul>
     </div>
    <div>
        <strong>v2.2.1</strong>
        <ul>
          <li>fix bugs</li>
        </ul>
     </div>
     <div>
        <strong>v2.2.0</strong>
        <ul>
          <li>copy curl</li>
          <li>copy openapi</li>
          <li>upload to apifox</li>
          <li>search url(ctrl + \)</li>
        </ul>
     </div>
     <div>
        <strong>v2.1.0</strong>
        <ul>
          <li>copy json</li>
          <li>copy idea http client</li>
        </ul>
     </div>
     <div>
        <strong>v2.0.0</strong>
        <ul>
          <li>html template</li>
          <li>markdown template</li>
          <li>word template</li>
          <li>config support</li>
        </ul>
     </div>
     <div>
        <strong>v1.1.0</strong>
        <ul>
          <li>build postman collection</li>
        </ul>
     <div>
        <strong>v1.0.0</strong>
        <ul>
          <li>build html</li>
          <li>build markdown</li>
          <li>build word</li>
        </ul>
     </div>
    ]]>
    </change-notes>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/build-number-ranges.html for description -->
    <idea-version since-build="221.5080.210"/>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="MyDoc.Notification.Group" displayType="BALLOON"/>
        <projectService serviceImplementation="top.verytouch.vkit.mydoc.config.ConfigStorage"/>
        <projectService serviceImplementation="top.verytouch.vkit.mydoc.search.UrlSearchModuleFilterConfiguration"/>
        <projectConfigurable instance="top.verytouch.vkit.mydoc.config.ConfigAction"/>
        <searchEverywhereContributor implementation="top.verytouch.vkit.mydoc.search.UrlSearchEverywhereContributorFactory"/>
    </extensions>


    <actions>
        <group id="MyDoc.EditorPopup" class="top.verytouch.vkit.mydoc.action.group.EditorPopup" text="My Doc" popup="true">
            <add-to-group group-id="EditorPopupMenu" anchor="before" relative-to-action="EditorPopupMenu1"/>
        </group>

        <group id="MyDoc.ProjectPopup" class="top.verytouch.vkit.mydoc.action.group.ProjectPopup" text="My Doc" popup="true">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="before" relative-to-action="FindUsages" />
        </group>

        <action id="top.verytouch.vkit.mydoc.action.HtmlAction" class="top.verytouch.vkit.mydoc.action.HtmlAction" text="Build Html">
            <add-to-group group-id="MyDoc.EditorPopup" anchor="first"/>
            <add-to-group group-id="MyDoc.ProjectPopup" anchor="first"/>
        </action>

        <action id="top.verytouch.vkit.mydoc.action.MarkdownAction" class="top.verytouch.vkit.mydoc.action.MarkdownAction" text="Build Markdown">
            <add-to-group group-id="MyDoc.EditorPopup" anchor="after" relative-to-action="top.verytouch.vkit.mydoc.action.HtmlAction"/>
            <add-to-group group-id="MyDoc.ProjectPopup" anchor="after" relative-to-action="top.verytouch.vkit.mydoc.action.HtmlAction"/>
        </action>

        <action id="top.verytouch.vkit.mydoc.action.WordAction" class="top.verytouch.vkit.mydoc.action.WordAction" text="Build Word">
            <add-to-group group-id="MyDoc.EditorPopup" anchor="after" relative-to-action="top.verytouch.vkit.mydoc.action.MarkdownAction"/>
            <add-to-group group-id="MyDoc.ProjectPopup" anchor="after" relative-to-action="top.verytouch.vkit.mydoc.action.MarkdownAction"/>
        </action>

        <action id="top.verytouch.vkit.mydoc.action.PostmanAction" class="top.verytouch.vkit.mydoc.action.PostmanAction" text="Build Postman Collection">
            <add-to-group group-id="MyDoc.EditorPopup" anchor="after" relative-to-action="top.verytouch.vkit.mydoc.action.WordAction"/>
            <add-to-group group-id="MyDoc.ProjectPopup" anchor="after" relative-to-action="top.verytouch.vkit.mydoc.action.WordAction"/>
        </action>

        <action id="top.verytouch.vkit.mydoc.action.JsonAction" class="top.verytouch.vkit.mydoc.action.JsonAction" text="Copy Json Doc">
            <add-to-group group-id="MyDoc.EditorPopup" anchor="after" relative-to-action="top.verytouch.vkit.mydoc.action.PostmanAction"/>
            <add-to-group group-id="MyDoc.ProjectPopup" anchor="after" relative-to-action="top.verytouch.vkit.mydoc.action.PostmanAction"/>
        </action>

        <action id="top.verytouch.vkit.mydoc.action.JsonSchemaAction" class="top.verytouch.vkit.mydoc.action.JsonSchemaAction" text="Copy Json Schema">
            <add-to-group group-id="MyDoc.EditorPopup" anchor="after" relative-to-action="top.verytouch.vkit.mydoc.action.JsonAction"/>
        </action>

        <action id="top.verytouch.vkit.mydoc.action.IdeaHttpAction" class="top.verytouch.vkit.mydoc.action.IdeaHttpAction" text="Copy Idea Http">
            <add-to-group group-id="MyDoc.EditorPopup" anchor="after" relative-to-action="top.verytouch.vkit.mydoc.action.JsonSchemaAction"/>
            <add-to-group group-id="MyDoc.ProjectPopup" anchor="after" relative-to-action="top.verytouch.vkit.mydoc.action.JsonSchemaAction"/>
        </action>
        <action id="top.verytouch.vkit.mydoc.action.CurlApiAction" class="top.verytouch.vkit.mydoc.action.CurlApiAction" text="Copy Curl">
            <add-to-group group-id="MyDoc.EditorPopup" anchor="after" relative-to-action="top.verytouch.vkit.mydoc.action.IdeaHttpAction"/>
            <add-to-group group-id="MyDoc.ProjectPopup" anchor="after" relative-to-action="top.verytouch.vkit.mydoc.action.IdeaHttpAction"/>
        </action>


        <action id="top.verytouch.vkit.mydoc.action.OpenApiAction" class="top.verytouch.vkit.mydoc.action.OpenApiAction" text="Copy OpenApi">
            <add-to-group group-id="MyDoc.EditorPopup" anchor="after" relative-to-action="top.verytouch.vkit.mydoc.action.CurlApiAction"/>
            <add-to-group group-id="MyDoc.ProjectPopup" anchor="after" relative-to-action="top.verytouch.vkit.mydoc.action.CurlApiAction"/>
        </action>

        <action id="top.verytouch.vkit.mydoc.action.ApiFoxAction" class="top.verytouch.vkit.mydoc.action.ApiFoxAction" text="Upload ApiFox">
            <add-to-group group-id="MyDoc.EditorPopup" anchor="after" relative-to-action="top.verytouch.vkit.mydoc.action.OpenApiAction"/>
            <add-to-group group-id="MyDoc.ProjectPopup" anchor="after" relative-to-action="top.verytouch.vkit.mydoc.action.OpenApiAction"/>
        </action>

        <action id="top.verytouch.vkit.mydoc.search.UrlSearchEverywhereAction" class="top.verytouch.vkit.mydoc.search.UrlSearchEverywhereAction"
                text="Search URLs"
                icon="AllIcons.Actions.Find">
            <keyboard-shortcut keymap="$default" first-keystroke="control BACK_SLASH"/>
        </action>
    </actions>

</idea-plugin>